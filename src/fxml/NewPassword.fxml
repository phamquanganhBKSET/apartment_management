<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="406.0" prefWidth="436.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.NewPasswordController">
   <children>
      <Label fx:id="loginLabel" layoutX="75.0" layoutY="136.0" prefHeight="42.0" prefWidth="285.0" text="Change password">
         <font>
            <Font name="Trebuchet MS" size="36.0" />
         </font></Label>
      <Button fx:id="changePassword" layoutX="81.0" layoutY="320.0" mnemonicParsing="false" onAction="#handleChangePassword" prefHeight="29.0" prefWidth="272.0" text="Change Password">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Label fx:id="close" layoutX="402.0" layoutY="1.0" onMouseClicked="#handleClose" prefHeight="30.0" prefWidth="26.0" text=" X">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="minimize" layoutX="364.0" layoutY="-1.0" onMouseClicked="#handleMinimize" prefHeight="32.0" prefWidth="19.0" text=" -" textAlignment="CENTER">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <ImageView fitHeight="106.0" fitWidth="116.0" layoutX="164.0" layoutY="21.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../icon/password.png" />
         </image>
      </ImageView>
      <Hyperlink fx:id="back" layoutX="172.0" layoutY="370.0" onAction="#handleBack" text="&lt; Back to Login" />
      <PasswordField fx:id="newPassword" layoutX="80.0" layoutY="210.0" prefHeight="25.0" prefWidth="272.0" promptText="New Password">
         <font>
            <Font size="14.0" />
         </font>
      </PasswordField>
      <PasswordField fx:id="confirmNewPassword" layoutX="80.0" layoutY="260.0" prefHeight="25.0" prefWidth="272.0" promptText="Confirm New Password">
         <font>
            <Font size="14.0" />
         </font>
      </PasswordField>
   </children>
</AnchorPane>
